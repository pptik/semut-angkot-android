<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    tools:context="project.bsts.semut.fragments.map.SubmitTagFragment"
    android:background="@drawable/bg_white_rounded">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text=""
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_black_top_rounded"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:gravity="center|center_horizontal" />


            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/closeButton"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/btn_close_menu"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:background="#00ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="1">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Apakah Anda sedang menunggu Angkot ?"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:id="@+id/textView6"
                android:textColor="@color/semut_blue_color"
                android:layout_marginTop="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutSpinner"
                >
                <Spinner
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/shape_drop_down_normal"
                    android:id="@+id/spinnerTrayek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/shape_drop_down_normal"
                    android:id="@+id/spinnerArah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/remarks"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_weight="0.10"
                    android:background="@drawable/stroke_rounded_blue"
                    android:hint="Ketik Jumlah Penumpang..."
                    android:gravity="top"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:maxLength="2" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal">


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="YA"
                android:id="@+id/submitButton"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/solid_rounded_blue"
                android:textColor="@color/white"
                android:elegantTextHeight="false" />
            <Button
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="TIDAK"
                android:id="@+id/cancel_btn"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/stroke_rounded_blue"
                android:textColor="@color/red_900"
                android:elegantTextHeight="false" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>